<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
 <xsd:element name="telefon">
	<xsd:simpleType>
		<xsd:restriction base="xsd:string">
		
			<xsd:pattern value="[0-9][0-9][0-9]-[0-9][0-9][0-9]-[0-9][0-9][0-9]"/>
			<xsd:pattern value="\+48[0-9][0-9][0-9]-[0-9][0-9][0-9]-[0-9][0-9][0-9]"/>
			<xsd:pattern value="\(58\)[0-9][0-9][0-9]-[0-9][0-9]-[0-9][0-9]"/>
				
		</xsd:restriction>
	</xsd:simpleType>
 </xsd:element>
</xsd:schema>
